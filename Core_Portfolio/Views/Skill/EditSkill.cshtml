@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("EditSkill", "Skill", FormMethod.Post))
{
    <div class="col-xl-12 order-xl-1">
        <div class="card">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col-8">
                        <h3 class="mb-0">Update Skill</h3>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.HiddenFor(x=>x.SkillId)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.Label("Skill Title")
                                @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.Label("Skill Rate")
                                @Html.TextBoxFor(x => x.Value, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Value, null, new { @class = "text-danger" })

                            </div>
                        </div>
                    </div>
                    <div class="col-8">
                        <button class="btn btn-large btn-success">Save</button>
                    </div>
                </div>

            </div>

        </div>
    </div>

}
