@using EntityLayer.Concrete
@model List<SocialMedia>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Social Media Accounts</h4>
            <div class="table-responsive">

                <table class="table">

                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Delete</th>
                            <th>Update</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var socialMedia in Model)
                        {
                            <tr>
                                <td>@socialMedia.SocialMediaId</td>
                                <td>@socialMedia.Name</td>
                                <td>
                                    <a href="/SocialMedia/DeleteSocialMedia/@socialMedia.SocialMediaId" class="btn btn-outline-danger">Delete</a>
                                </td>
                                <td>
                                    <a href="/SocialMedia/EditSocialMedia/@socialMedia.SocialMediaId" class="btn btn-outline-success">Update</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="mt-3">
                    <a href="/SocialMedia/AddSocialMedia" class="btn btn-outline-info">Add New Social Media</a>
                </div>


            </div>

        </div>
    </div>
</div>
