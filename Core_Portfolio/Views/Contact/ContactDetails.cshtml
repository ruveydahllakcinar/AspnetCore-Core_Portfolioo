@model EntityLayer.Concrete.Message

@{
    ViewData["Title"] = "ContactDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Contact Details</h4>

            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Message Id</label>
                    <input type="text" asp-for="MessageId" class="form-control" id="exampleInputName1" placeholder="Message Id">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Sender Name</label>
                    <input type="text" asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Sender Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Subject</label>
                    <input type="text" asp-for="Subject" class="form-control" id="exampleInputName1" placeholder="Subject">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Sender Mail</label>
                    <input type="text" asp-for="Mail" class="form-control" rows="5" id="exampleInputName1" placeholder="Sender Mail">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Date</label>
                    <input type="text" asp-for="Date" class="form-control" rows="5" id="exampleInputName1" placeholder="Date">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Message Content</label>
                    <input type="text" asp-for="Content" class="form-control" rows="5" id="exampleInputName1" placeholder="Message Content">
                </div>
                <div class="col-8">
                    <a asp-action="Index" class="btn btn-large btn-success">Contact</a>
                </div>
            </form>

        </div>
    </div>
</div>
