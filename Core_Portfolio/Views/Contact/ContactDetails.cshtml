@model EntityLayer.Concrete.Message

@{
    ViewData["Title"] = "ContactDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

    <div class="col-xl-12 order-xl-1">
        <div class="card">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col-8">
                        <h3 class="mb-0">Contact Details</h3>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.HiddenFor(x => x.MessageId)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.Label("Sender Name")
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.Label("Subject")
                                @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.Label("Sender Mail")
                                @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.Label("Date")
                                @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Date, null, new { @class = "text-danger" })

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.Label("Content")
                                @Html.TextBoxFor(x => x.Content, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Content, null, new { @class = "text-danger" })

                            </div>
                        </div>
                    </div>
                    <div class="col-8">
                        <a asp-action="Index" class="btn btn-large btn-success">Contact</a>
                    </div>
                </div>

            </div>

        </div>
    </div>

