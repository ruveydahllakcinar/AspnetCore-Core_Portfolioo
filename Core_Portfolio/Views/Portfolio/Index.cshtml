@using EntityLayer.Concrete
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Striped Table</h4>
            <p class="card-description">
                Add class <code>.table-striped</code>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> Project Platform </th>
                            <th> Project Name </th>
                            <th> Project Url </th>
                            <th> Price </th>
                            <th> Project Image </th>
                            <th> Delete </th>
                            <th>Update </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var portfolio in Model)
                        {
                            <tr>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <a href="#" class="avatar rounded-circle mr-3">
                                            <img alt="" src="@portfolio.Platform">
                                        </a>
                                    </div>
                                </th>
                                <td> @portfolio.Name </td>
                                <td> @portfolio.ProjectUrl </td>
                                <td>@portfolio.Price</td>
                                <td class="py-1">
                                    <img src="@portfolio.ImageUrl" alt="image" />
                                </td>
                                <td>
                                    <a href="/Portfolio/DeletePortfolio/@portfolio.PortfolioID" class="btn btn-outline-danger">Delete</a>
                                </td>
                                <td>
                                    <a href="/Portfolio/EditPortfolio/@portfolio.PortfolioID" class="btn btn-outline-success">Update</a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
                <div class="mt-3">
                    <a href="/Portfolio/AddPortfolio" class="btn btn-outline-info">Add New Portfolio</a>
                </div>
            </div>
        </div>
    </div>
</div>
