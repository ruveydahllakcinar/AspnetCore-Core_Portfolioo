@using EntityLayer.Concrete
@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Experience Table</h4>
            <div class="table-responsive">

                <table class="table">

                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Company Name</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Date</th>
                            <th>Delete</th>
                            <th>Update</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var experience in Model)
                        {
                            <tr>
                                <td>@experience.ExperienceId</td>
                                <td>@experience.CompanyName</td>
                                <td>@experience.Title</td>
                                <td>@experience.Description.ToString().Substring(0, (experience.Description.Length > 50) ? 50 : experience.Description.Length) ...</td>
                                <td>@experience.Date</td>
                                <td>
                                    <a href="/Experience/DeleteExperience/@experience.ExperienceId" class="btn btn-outline-danger">Delete</a>    
                                </td>
                                <td>
                                    <a href="/Experience/EditExperience/@experience.ExperienceId" class="btn btn-outline-success">Update</a> 
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="mt-3">
                    <a href="/Experience/AddExperience" class="btn btn-outline-info">Add New Experience</a>
                </div>
               

            </div>

        </div>
    </div>
</div>
