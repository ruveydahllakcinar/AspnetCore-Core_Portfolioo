@model Core_Portfolio.Models.AddSpeakerImage

@{
    ViewData["Title"] = "EditSpeaker";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add New Talks or Workshops</h4>

            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Title</label>
                    <input type="text" asp-for="Title" class="form-control" id="exampleInputName1" placeholder="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Subject</label>
                    <input type="text" asp-for="Subject" class="form-control" id="exampleInputName1" placeholder="Subject">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Date</label>
                    <input type="datetime" asp-for="Date" class="form-control" id="exampleInputName1" placeholder="Date">

                </div>

                <div class="form-group">
                    <label>Image</label>
                    <input type="file" name="SpeakerImage" />
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>

            </form>

        </div>
    </div>
</div>

