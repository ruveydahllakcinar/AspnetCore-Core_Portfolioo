@using EntityLayer.Concrete
@model List<About>
    <div class="section" id="about">
        <div class="container">
            <div class="card" data-aos="fade-up" data-aos-offset="10">
                @foreach (var about in Model)
                {
                    <div class="row">
                        <div class="col-lg-6 col-md-12">
                            <div class="card-body">
                                <div class="h4 mt-0 title">About</div>
                                <p>
                                   @about.Description
                                    <br>
                                    <a href="https://www.linkedin.com/in/ruveydahilalakcinar/" target="_blank">Learn More</a>
                                </p>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-12">
                            <div class="card-body">
                                <div class="h4 mt-0 title">Basic Information</div>
                                <div class="row">
                                    <div class="col-sm-4"><strong class="text-uppercase">Birthday:</strong></div>
                                    <div class="col-sm-8">@about.Birthday</div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-sm-4"><strong class="text-uppercase">Email:</strong></div>
                                    <div class="col-sm-8">@about.Mail</div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-sm-4"><strong class="text-uppercase">Phone:</strong></div>
                                    <div class="col-sm-8">@about.Phone</div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-sm-4"><strong class="text-uppercase">Address:</strong></div>
                                    <div class="col-sm-8">@about.Adress</div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-sm-4"><strong class="text-uppercase">Freelance:</strong></div>
                                    <div class="col-sm-8">@about.Freelance</div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-sm-4"><strong class="text-uppercase">Degree:</strong></div>
                                    <div class="col-sm-8">Graduate</div>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>