@using EntityLayer.Concrete
@model List<Speaker>
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h4 class="card-title mb-1">Last 5 Talks</h4>
                <p class="text-muted mb-1">Your data status</p>
            </div>
            <div class="row">
                @foreach (var speaker in Model)
                {
                    <div class="col-12">
                        <div class="preview-list">
                            <div class="preview-item border-bottom">
                                <div class="preview-thumbnail">
                                    <img src="~/SpeakerImage/@speaker.SpeakerImage" alt="image" class="rounded-circle" />
                                </div>
                                @*<div class="preview-thumbnail">
                                    <div class="preview-icon bg-primary">
                                        <i class="mdi mdi-email-open"></i>
                                    </div>
                                </div>*@
                                <div class="preview-item-content d-sm-flex flex-grow">
                                    <div class="flex-grow">
                                        <h6 class="preview-subject text-uppercase">@speaker.Title</h6>
                                        <p class="text-muted mb-0">@speaker.Subject</p>
                                    </div>
                                    <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                        <p class="text-muted">@speaker.Date.ToString("dd.MM.yyyy")</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>
