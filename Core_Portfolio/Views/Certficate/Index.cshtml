@using EntityLayer.Concrete
@model List<Certficate>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Certificate Table</h4>
            <div class="table-responsive">

                <table class="table">

                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Company Name</th>
                            <th>Title</th>
                            <th>Links</th>                      
                            <th>Delete</th>
                            <th>Update</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var certficate in Model)
                        {
                        <tr>
                            <td>@certficate.CertficateId</td>
                            <td>@certficate.CompanyName</td>
                            <td>@certficate.Title</td>
                            <td>@certficate.Links</td>
                            <td>
                                <a href="/Certficate/DeleteCertficate/@certficate.CertficateId" class="btn btn-outline-danger">Delete</a>
                            </td>
                            <td>
                                <a href="/Certficate/EditCertficate/@certficate.CertficateId" class="btn btn-outline-success">Update</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
                <div class="mt-3">
                    <a href="/Certficate/AddCertficate" class="btn btn-outline-info">Add New Certificate</a>
                </div>


            </div>

        </div>
    </div>
</div>
