@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminMessageSend";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Profile Information</h4>

            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Subject</label>
                    <input type="text" asp-for="Subject" class="form-control" id="exampleInputName1" placeholder="Subject">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Receiver</label>
                    <input type="text" asp-for="Receiver" class="form-control" id="exampleInputName1" placeholder="Receiver">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Message Content</label>
                    <textarea type="text" asp-for="MessageContent" class="form-control" rows="5" id="exampleInputName1" placeholder="Message Content"></textarea>
                </div>

                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>

        </div>
    </div>
</div>
