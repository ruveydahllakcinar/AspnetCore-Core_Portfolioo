@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "AdminMessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-xl-12 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">Message Details</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="pl-lg-4">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            @Html.HiddenFor(x => x.WriterMessageId)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            @Html.Label("Subject")
                            @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            @Html.Label("Sender")
                            @Html.TextBoxFor(x => x.SenderName, new { @class = "form-control" })

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            @Html.Label("Receiver")
                            @Html.TextBoxFor(x => x.ReceiverName, new { @class = "form-control" })

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            @Html.Label("Date")
                            @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            @Html.Label("Message")
                            @Html.TextBoxFor(x => x.MessageContent, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="col-8">
                    <a asp-action="ReceiverMessageList" class="btn btn-large btn-inverse-primary mr-2">Admin Inbox</a>
                    <a asp-action="SenderMessageList" class="btn btn-large btn-inverse-warning mr-2">Admin Outbox</a>
                </div>
            </div>

        </div>

    </div>
</div>

