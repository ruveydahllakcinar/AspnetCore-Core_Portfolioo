
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin">
            <div class="row">
                <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                    <h3 class="font-weight-bold">Welcome @ViewBag.v</h3>
                    <h6 class="font-weight-normal mb-0">If you are curious about new announcements,  <span class="text-primary font-weight-500"><a href="/WriterArea/WriterDefault/Index">you should click now!</a></span></h6>
                </div>
                <div class="col-12 col-xl-4">
                    <div class="justify-content-end d-flex">
                        <div class="dropdown flex-md-grow-1 flex-xl-grow-0">
                            <button class="btn btn-sm btn-light bg-white dropdown-toggle" type="button" id="dropdownMenuDate2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                <i class="mdi mdi-calendar"></i> @DateTime.Now.ToShortDateString()
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card tale-bg">
                <div class="card-people mt-auto">
                    <img src="~/skydash/images/dashboard/people.svg" alt="people">
                    <div class="weather-info">
                        <div class="d-flex">
                            <div>
                                <h2 class="mb-0 font-weight-normal"><i class="icon-sun mr-2"></i>@ViewBag.v5<sup>C</sup></h2>
                            </div>
                            <div class="ml-2">
                                <h4 class="location font-weight-normal">Denizli</h4>
                                <h6 class="font-weight-normal">Turkey</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 grid-margin transparent">
            <div class="row">
                <div class="col-md-6 mb-4 stretch-card transparent">
                    <div class="card card-inverse-success">
                        <div class="card-body">
                            <p class="mb-4">Number of Incoming Messages</p>
                            <p class="fs-30 mb-2">@ViewBag.v1</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-4 stretch-card transparent">
                    <div class="card card-inverse-danger">
                        <div class="card-body">
                            <p class="mb-4">Number of Announcements</p>
                            <p class="fs-30 mb-2">@ViewBag.v2</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4 stretch-card transparent">
                    <div class="card card-inverse-warning">
                        <div class="card-body">
                            <p class="mb-4">Number of Talks & Workshops</p>
                            <p class="fs-30 mb-2">@ViewBag.v4</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4 stretch-card transparent">
                    <div class="card card-inverse-info">
                        <div class="card-body">
                            <p class="mb-4">Number of User Informations</p>
                            <p class="fs-30 mb-2">@ViewBag.v3</p>
                        </div>
                    </div>
                </div>
              
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title">User Panel</p>
                <p class="font-weight-500">This page is a specially created page for our users. Announcements will be posted on this page.</p>
            </div>
        </div>
    </div>
</div>
