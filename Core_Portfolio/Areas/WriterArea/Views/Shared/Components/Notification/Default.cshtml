@using EntityLayer.Concrete
@model List<Announcement>
@{string color = ""; }
<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
    <p class="mb-0 font-weight-normal float-left dropdown-header">Notifications</p>
    @foreach (var announcement in Model)
    {
        if (announcement.Status == "New Content")
        {
            color = "preview-icon bg-danger";
        }
        if (announcement.Status == "New Event")
        {
            color = "preview-icon bg-success";
        }
        if (announcement.Status == "New Talks")
        {
            color = "preview-icon bg-warning";
        }
        if (announcement.Status == "#IamRemerkable")
        {
            color = "preview-icon bg-info";
        }
        if (announcement.Status == "New Post")
        {
            color = "preview-icon bg-primary";
        }
        if (announcement.Status == "Workshops")
        {
            color = "preview-icon bg-primary";
        }
        <a href="/WriterArea/WriterDefault/AnnouncementDetails/@announcement.Id" class="dropdown-item preview-item">
            <div class="preview-thumbnail">
                <div class="@color">
                    <i class="ti-info-alt mx-0"></i>
                </div>
            </div>
            <div class="preview-item-content">
                <h6 class="preview-subject font-weight-normal">@announcement.Title</h6>
                <p class="font-weight-light small-text mb-0 text-muted">
                    @announcement.Status
                </p>
            </div>
        </a>
    }


</div>
