@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Inbox</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Subject</th>
                            <th>Sender</th>
                            <th>Date</th>
                            <th>Details</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var writerMessage in Model)
                        {
                           
                            <tr>
                                <th>@writerMessage.WriterMessageId</th>
                                <td>@writerMessage.Subject</td>
                                <td>@writerMessage.SenderName</td>
                                <td>@(((DateTime)writerMessage.Date).ToString("dd.MM.yyyy"))</td>
                                <td><a href="/WriterArea/Message/MessageDetails/@writerMessage.WriterMessageId" class="btn btn-outline-primary">See Message</a></td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
